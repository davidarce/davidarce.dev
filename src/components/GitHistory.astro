---
import { experienceData } from "../data/experience";
import GitLogList from "./GitLogList";
---

<section id="experience" class="py-12 md:py-20 md:pl-16">
  <div class="mx-auto max-w-5xl px-4 md:px-6">
    <div class="mb-8 md:mb-12 flex items-center gap-4">
      <h2 class="text-2xl md:text-3xl font-bold text-text font-mono">
        <span class="text-primary">git log</span> --graph --oneline
      </h2>
      <div class="h-px flex-1 bg-white/10"></div>
    </div>

    <GitLogList client:visible items={experienceData} />
  </div>
</section>

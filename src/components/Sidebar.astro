---
import { Terminal, Code, Cpu, BookOpen } from "lucide-react";
import ThemeSwitcher from "./ThemeSwitcher";
---

<aside
    class="fixed left-0 top-0 z-50 hidden h-screen w-16 flex-col items-center border-r border-white/10 bg-surface py-4 md:flex"
>
    <!-- Logo -->
    <a
        href="#home"
        class="mb-8 flex h-10 w-10 items-center justify-center rounded-lg bg-gradient-to-br from-primary to-secondary font-mono text-lg font-bold text-black transition-transform hover:scale-110"
    >
        DA
    </a>

    <!-- Navigation -->
    <nav class="flex flex-1 flex-col gap-4">
        <a
            href="#home"
            class="nav-link group relative flex h-12 w-12 items-center justify-center rounded-lg transition-colors hover:bg-white/10"
            data-section="home"
            title="Home"
        >
            <Terminal
                className="h-5 w-5 text-text-muted group-hover:text-primary transition-colors"
            />
            <span
                class="nav-indicator absolute left-0 top-1/2 h-8 w-1 -translate-y-1/2 rounded-r bg-primary opacity-0 transition-opacity"
            ></span>
        </a>

        <a
            href="#experience"
            class="nav-link group relative flex h-12 w-12 items-center justify-center rounded-lg transition-colors hover:bg-white/10"
            data-section="experience"
            title="Experience"
        >
            <Code
                className="h-5 w-5 text-text-muted group-hover:text-primary transition-colors"
            />
            <span
                class="nav-indicator absolute left-0 top-1/2 h-8 w-1 -translate-y-1/2 rounded-r bg-primary opacity-0 transition-opacity"
            ></span>
        </a>

        <a
            href="#skills"
            class="nav-link group relative flex h-12 w-12 items-center justify-center rounded-lg transition-colors hover:bg-white/10"
            data-section="skills"
            title="Skills"
        >
            <Cpu
                className="h-5 w-5 text-text-muted group-hover:text-primary transition-colors"
            />
            <span
                class="nav-indicator absolute left-0 top-1/2 h-8 w-1 -translate-y-1/2 rounded-r bg-primary opacity-0 transition-opacity"
            ></span>
        </a>

        <a
            href="#education"
            class="nav-link group relative flex h-12 w-12 items-center justify-center rounded-lg transition-colors hover:bg-white/10"
            data-section="education"
            title="Education"
        >
            <BookOpen
                className="h-5 w-5 text-text-muted group-hover:text-primary transition-colors"
            />
            <span
                class="nav-indicator absolute left-0 top-1/2 h-8 w-1 -translate-y-1/2 rounded-r bg-primary opacity-0 transition-opacity"
            ></span>
        </a>
    </nav>

    <!-- Theme Switcher -->
    <div class="mt-auto">
        <ThemeSwitcher client:load />
    </div>

    <!-- Social Links -->
    <div class="mt-4 flex flex-col gap-4">
        <a
            href="https://github.com/davidarce"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-lg text-text-muted transition-colors hover:bg-white/10 hover:text-primary"
            title="GitHub"
        >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
